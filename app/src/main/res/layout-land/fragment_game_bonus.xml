<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_land_light"
    app:layout_constraintDimensionRatio="1:1"
    tools:context=".presentation.fragments.GameBonusFragment">

    <ImageView
        android:id="@+id/field_total"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/text_field_gray"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h32"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="@id/guideline_v70"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintWidth_percent="0.18" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/total_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="@string/total"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/guideline_h22"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintEnd_toEndOf="@id/guideline_v70"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/total_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guideline_v70"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintTop_toBottomOf="@id/guideline_h22"
        app:layout_constraintWidth_percent="0.2"
        tools:text="100" />

    <ImageView
        android:id="@+id/field_win"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/text_field_gray"
        app:layout_constraintStart_toStartOf="@id/guideline_v70"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h32"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.18" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/win_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="@string/win"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/guideline_h22"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="@id/guideline_v70"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/win_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.07 "
        app:layout_constraintStart_toStartOf="@id/guideline_v70"
        app:layout_constraintTop_toBottomOf="@id/guideline_h22"
        app:layout_constraintWidth_percent="0.18"
        tools:text="1000" />

    <ImageView
        android:id="@+id/slot_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/field_slot_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_v50"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/left_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h77"
        app:layout_constraintEnd_toEndOf="@id/guideline_v18"
        app:layout_constraintStart_toStartOf="@id/guideline_v7"
        app:layout_constraintTop_toTopOf="@id/guideline_h22"
        tools:listitem="@layout/slot"
        tools:itemCount="40"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/center_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h77"
        app:layout_constraintEnd_toEndOf="@id/guideline_v31"
        app:layout_constraintStart_toStartOf="@id/guideline_v18"
        app:layout_constraintTop_toTopOf="@id/guideline_h22"
        tools:listitem="@layout/slot"
        tools:itemCount="40"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/right_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h77"
        app:layout_constraintEnd_toEndOf="@id/guideline_v43"
        app:layout_constraintStart_toStartOf="@id/guideline_v31"
        app:layout_constraintTop_toTopOf="@id/guideline_h22"
        tools:listitem="@layout/slot"
        tools:itemCount="40"
        />

    <ImageView
        android:id="@+id/field_bet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/text_field_gray"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h65"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintTop_toTopOf="@id/guideline_h32"
        app:layout_constraintWidth_percent="0.25" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bet_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h65"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintTop_toTopOf="@id/guideline_h32"
        app:layout_constraintWidth_percent="0.2"
        tools:text="100" />

    <ImageView
        android:id="@+id/button_decrease_bet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/button_decrease_bet_gray"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h65"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="@id/guideline_h32"
        app:layout_constraintWidth_percent="0.1" />

    <ImageView
        android:id="@+id/button_increase_bet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/button_increase_bet_gray"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h65"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="@id/guideline_h32"
        app:layout_constraintWidth_percent="0.1" />

    <ImageView
        android:id="@+id/button_repeat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/button_repeat_gray"
        app:layout_constraintTop_toTopOf="@id/guideline_h65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_v95"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="@id/guideline_v50"
        app:layout_constraintWidth_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.225" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1855" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>